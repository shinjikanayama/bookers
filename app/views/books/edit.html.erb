<h2>Editing book</h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %> error

 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "/books/#{@book.id}" do %>
    Show|
<% end %>

<a href="/books">Back</a>